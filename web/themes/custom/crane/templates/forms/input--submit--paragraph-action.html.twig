{#
/**
 * @file
 * Theme override for an 'input' #type form element.
 *
 * Available variables:
 * - attributes: A list of HTML attributes for the input element.
 * - children: Optional additional rendered elements.
 *
 * @see template_preprocess_input()
 */
#}
{% if 'Add' in attributes.storage().value.__toString() %}
	{% set addValue = '+ ' ~ attributes.storage().value.__toString() %}
{% else %}
	{% set addValue = attributes.storage().value.__toString() %}
{% endif %}
<input{{ attributes.addClass('paragraph-button').removeAttribute('value') }} value="{% autoescape false %}{{ addValue }}{% endautoescape %}" }} />{{ children }}
